{
  "compilerOptions": {
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "module": "ESNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src"]
}
